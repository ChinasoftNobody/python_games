TankGame:
<TankGame@RelativeLayout>:
    size:root.size
    Label:
        text:'TANK CRAFT'
    RelativeLayout:
        pos:0,-50
        Label:
            text:'press enter to start'

<TankWidget>:
    size_hint:None,None
    size:(40,40)
    canvas:
        Rectangle:
            pos:self.x,self.y
            size:40,25

        Rectangle:
            pos:self.x + 20-2.5,self.y + 25
            size:5,15

<BulletWidget>:
    size_hint:None,None
    size:4,4
    canvas:
        Ellipse:
            pos:self.pos_x,self.pos_y
            size:4,4